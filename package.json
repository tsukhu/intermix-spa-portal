{
  "name": "intermix-spa-portal",
  "version": "1.0.0",
  "description": "Single SPA MonoRepo",
  "main": "index.js",
  "author": "Tarun Kumar Sukhu",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@types/**",
      "**/react-hook-form/**",
      "**/react-hook-form",
      "**/react-bpmn/**",
      "**/react-bpmn",
      "**/bpmn-js/**",
      "**/bpmn-js"
    ]
  },
  "scripts": {
    "clean": "rimraf node_modules packages/**/node_modules",
    "build": "yarn workspaces run build",
    "start": "concurrently \"wsrun --parallel start\"",
    "start:wf": "concurrently \"wsrun --exclude calendar --exclude landing --exclude reports --parallel start\""
  },
  "dependencies": {
    "concurrently": "^5.2.0",
    "copyfiles": "^2.3.0",
    "cross-env": "^7.0.2",
    "rimraf": "^3.0.2",
    "wsrun": "^5.2.1"
  }
}